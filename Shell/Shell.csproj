<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\PirateInterpreter\PirateInterpreter.csproj" />
    <ProjectReference Include="..\PirateLexer\PirateLexer.csproj" />
    <ProjectReference Include="..\PirateParser\PirateParser.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>PirateLang.CLI</PackageId>
    <Version>0.1.0</Version>
    <Authors>Joeri van Arkel</Authors>
    <Company>vanarkel</Company>
    <RepositoryUrl>https://github.com/joerivanarkel/PirateLang</RepositoryUrl>
    <PackageProjectUrl>https://github.com/joerivanarkel/PirateLang</PackageProjectUrl>

    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishReadyToRun>true</PublishReadyToRun>
    
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>pirate</ToolCommandName>
  </PropertyGroup>

</Project>
